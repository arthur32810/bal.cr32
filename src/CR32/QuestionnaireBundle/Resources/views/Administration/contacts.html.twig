{% extends "CR32QuestionnaireBundle::layout_admin.html.twig" %}

{% block body %}
	<h1> Participants au tirage au sort </h1>

	<table class="table">
		<thead class="thead-light">
			<tr>
				<th scope="col"> Nom </th>
				<th scope="col"> Prénom </th>
				<th scope="col"> Email</th>
				<th scope="col"> Supprimer </th>
			</tr>
		</thead>
		
		{% for contact in listContacts %}
			<tr> 
				<td> {{ contact.name}} </td>
				<td> {{ contact.surname}}</td>
				<td> {{ contact.email}} </td>
				<td> <a href="{{ path('cr32_administration_contact_delete', { 'id': contact.id}) }}" onclick="return(confirm('Etes-vous sûr de vouloir supprimer cette entrée?'));"> <i class="fas fa-trash-alt" style="color: red;"></i> </a> </td>
			</tr>	
		{% endfor %}

	</table>

{% endblock %}