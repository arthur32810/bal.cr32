{# page d'acceuil #}

{% extends "::layout.html.twig" %}

{% block body %}
	<h1 class="text-center"> Danses à la demande </h1>
	<p class="text-center"> Veuillez donner le nom de deux danses pour chaque niveau : </p>	

	<div>
		{% for message in app.session.flashbag.get('noDanse') %}
	        <p class="alert alert-danger">{{ message }}</p>
	      {% endfor %}
		{{ form_start(form) }}

		{# Erreur du formulaire #}
		{{ form_errors(form) }}

		<div id="debutant">
			<p> Débutant </p>
			<p> {{form_widget(form.debutant)}} </p>
		</div>

		<div id="novice">
			<p> Novice </p>
			<p> {{form_widget(form.novice)}} </p>
		</div>

		<div id="intermediaire">
			<p> Intermediaire </p>
			<p> {{form_widget(form.intermediaire)}} </p>
		</div>

		<div id="avance">
			<p> Avancé </p>
			<p> {{form_widget(form.avance)}} </p>
		</div>

		{{form_row(form.envoyer, {'attr': {'class': 'float-right'}})}} <br>

		{{ form_rest(form)}}

	</div> <br>

{% endblock %}