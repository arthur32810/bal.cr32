{# app/Resources/views/layout.html.twig #}

<!DOCTYPE html>
<html lang="fr">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<LINK REL="SHORTCUT ICON" href="{{ asset('bundles/cr32questionnaire/images/favicon.ico') }}">
	<title> {% block title %} Country Rebell's 32 {% endblock %} </title>

	{% block stylesheets %}
	    {# On charge le CSS de bootstrap 4 depuis le site directement #}
	    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

	{% endblock %}

</head>
<body>
	<div class="container">
		<div class="row" id="header">
			<img src="{{ asset('bundles/cr32questionnaire/images/bandeau.jpg') }}" alt="bandeau supérieur" class="mx-auto img-fluid" />
		</div> <br>

		{% block body %}
		{% endblock %}

		
		<hr> 
		<div class="row" id="footer">
			<div class="col">
				{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
				    Connecté en tant que {{ app.user.username }}
				    -
				    <a href="{{ path('fos_user_security_logout') }}">Déconnexion</a>
				{% else %}
				    <a href="{{ path('fos_user_security_login') }}">Connexion</a>
				{% endif %}
			</div>
			<div class="col">	
				<p class="text-right"> ©2018 - Country Rebell's 32</p>
			</div>
		</div>

	</div>
</body>
</html>